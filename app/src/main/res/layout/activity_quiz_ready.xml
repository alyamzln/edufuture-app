<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navi_bg"
    android:orientation="vertical"
    tools:context=".QuizReady">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundedcorner"
        android:elevation="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_think"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/icon_think" />

        <TextView
            android:id="@+id/text_knowledge"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Test your knowledge"
            android:layout_alignBottom="@+id/icon_think"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_remind"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_knowledge"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-38dp"
            android:fontFamily="@font/nunito_light"
            android:text="You have 10 seconds to answer each question. Good luck!"
            android:textColor="@color/black"
            android:textSize="13dp" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuiz"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/roundedcorner"
        android:text="START QUIZ"
        android:fontFamily="@font/nunito_black"
        android:textSize="18dp"/>


</LinearLayout>